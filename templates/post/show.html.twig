{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{ path('app_author_index') }}">Retour à la liste</a>
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('app_post_edit', {id: post.id}) }}">Modifier</a>
    {% endif %}
    <article>
        <h1>{{ post.title }}</h1>
        <p>Écrit par {{ post.writtenBy.name }}, le {{ post.createdAt | date('d/m/Y') }}</p>
        <p> Mot-clés :
            {% for keyword in post.keywords %}
                {{ keyword.name }}({{ keyword.posts | length }}){% if not loop.last %}, {% endif %}
            {% endfor %}
        </p>
        <div>
            {{ post.body | nl2br }}
        </div>
    </article>
{% endblock %}
