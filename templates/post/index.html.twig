{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{ path('app_post_create') }}">Ajouter</a>
    <ul>
        {% for post in posts %}
        <li>
            {{ loop.index }} - {{ post.title }}
            <a href="{{ path('app_author_show', {id: post.id}) }}">Voir</a>
        </li>
            {% else %}
            <li>Pas d'articles</li>
        {% endfor %}
    </ul>

    {% if posts | length is divisible by(2) %}
        <p>Demo structure "If"</p>
    {% endif %}

{% endblock %}
